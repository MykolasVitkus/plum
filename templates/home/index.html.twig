{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
    <a href="{{ path('edit_profile') }}" class="example-wrapper code">Edit profile</a>
</div>
<div class="example-wrapper">

    <div>
        <img src="{{ asset('uploads/pictures/' ~ user.Picture) }}" height="100px"><br>
        <span>Name</span>
        <h4 class="">{{ user.Name }} {{ user.LastName }}</h4>
        <span>Birth Date</span>
        <h4>{{ user.BirthDate|date("Y/m/d") }}</h4>
        <span>Email</span>
        <h4>{{ user.Email }}</h4>
        <span>Phone Number</span>
        <h4>{{ user.PhoneNumber }}</h4>
        <span>Experience</span>
        <h4>{{ user.Experience }}</h4>
        <span>About me</span>
        <h4 class="border-primary">{{ user.AboutMe }}</h4>

    </div>
</div>
{% endblock %}
